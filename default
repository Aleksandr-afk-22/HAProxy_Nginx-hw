server {
    listen 80;
    server_name localhost;
    root /var/www;

    # Отдача статических файлов .jpg напрямую
    location ~ \.jpg$ {
        # файл отдаётся напрямую Nginx
        add_header X-Served-By "Nginx Static" always;
        
        # Ищем файлы в папке images
        try_files $uri /images$uri =404;
    }

    # Все остальные запросы идут на HAProxy
    location / {
        # запрос идёт через HAProxy
        add_header X-Served-By "HAProxy Backend" always;
        
        # Проксирование на HAProxy
        proxy_pass http://127.0.0.1:8080;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Логирование
    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;
}

